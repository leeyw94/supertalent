
<link href="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.12/summernote-lite.css" rel="stylesheet">
<script src="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.12/summernote-lite.js"></script>
<link href="/css/userstyle.css" rel="stylesheet" />
@Html.Partial("/Views/Layout/Header_admin.cshtml")

<div class="text-center" style="margin:50px;">
    <h2 style="font-weight:bold;">Course Setting Page</h2>
</div>

<div class="container">
    <div class="" style="margin-bottom:50px">
        <div class="note row">
            <form action="/Admin/Course_setting_add" method="post" enctype="multipart/form-data">
                <div class="col-lg-3">
                    <h2 class="title-text">Setting Title</h2>
                </div>
                <div class="col-lg-9" style="margin-bottom:30px">
                    <input class="form-control" type="text" id="Title" name="Title">
                </div>
                <div class="col-lg-3">
                    <h2 class="title-text">Setting Content</h2>
                </div>
                <div class="col-lg-9 note">
                    <textarea id="Course_setting" name="Get_content">    
                </textarea>
                </div>
                <div class="col-lg-12 text-center">
                    <button class="btn-success" style="padding:10px; border:none;" type="submit">Setting Course</button>
                    <a href="/Admin/Course_setting_list" class="btn-primary" style="padding:10px; border:none;">&larr;Back to Setting List</a>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .c_title {
        font-weight: bold;
        font-size: 1.2em;
    }

    .title-text {
        font-size: 1.2em;
        font-weight: bold;
    }

    .note {
        margin-bottom: 30px;
    }

    * {
        box-sizing: border-box;
    }
</style>
<script>

    $(document).ready(function () {
        $('#Course_setting').summernote({
            height: 150
        });
    });
</script>