@model IEnumerable<supertalentoftheworld.Models.Travel_Goods>
@{
    Layout = "/Views/Shared/_Layout.cshtml";
}
@Html.Partial("/Views/Layout/Header.cshtml")
<!--Shop/Brochures-->
<div class="col-md-12" style="background-image: url('/images/Background/Brochures-back1.jpg'); height: 250px; box-sizing: border-box; background-size: cover; background-position: right center; background-repeat: no-repeat; color: #fff; line-height:3em;padding:0;">
    <div class="col-md-4 col-md-offset-1" style="display:block;position:relative;padding:20px 0;">
        <h1 style="font-size:7rem; font-weight:700;color:#fff;text-align:center; margin-top:10%;">Travel Deals</h1>
    </div>
</div>

<div class="col-md-12" style="clear:both;display:block;padding:30px 0;">
    <div class="text-left">
        <section class="gallery-front" style="padding:30px;">
            <div class="row" style="margin:1% 10%;">
                <h2 style="font-weight:600;">LUXURY TRAVEL WITH 360 ENTERTAINMENT</h2><br />
                <h3 style="font-weight:bold">Join the evolution</h3><br />
                <p style="font-size:1.2em">Share and making a difference #joinsupertalent #bestsupertalent #supertalentworld</p><br />
                <p style="font-size:1.2em; color:#ff4157">FEATURED EUROPE TRIPS, FOLLOW MY LUXURY EUROPE AND SHARE WITH WORLD</p>

                <div style="">
                    @{ int start_it = 1;}

                    @foreach (var item in Model.Where(a => a.Category == 0))
                    {
                        <div class="col-lg-3 col-md-6 col-sm-12 col-xs-12 text-center sel" style="margin-top:20px" onclick="location.href='/Shop/Details?id='+@item.id+''">
                            <div class="menuover">
                                <img class="img-responsive" src="@item.MainImgPath" style="width:100%;">
                                <div class="text-center">
                                    <h4 style="margin:15px; word-break:keep-all;">@item.Title</h4>
                                </div>
                                <div class="text-center">
                                    <span style="margin:15px; word-break:keep-all;font-size:14px;text-align:center;color:#ff4157">@item.Sdate ~  @item.Edate</span>
                                </div>
                                <div class="text-center" style="margin-bottom:15px">
                                    <p></p>
                                    <p class="t_price" style="margin-left:15px;line-height:1.4em;">

                                        <span style="color:#666; font-weight:500;font-size:14px;text-decoration:line-through;padding-left:30px;">
                                            @{
                                                double old_price = 0;
                                                double now_price = Convert.ToDouble(item.Price_d);

                                                old_price = (now_price / 0.8);

                                            }

                                            @old_price.ToString("###,###")

                                        </span><br />
                                        <span><span style="color:#ff4157;font-weight:500;font-size:14px;">20%&nbsp;&nbsp;</span>$</span> @item.Price_d <span style="font-size:0.7em">
                                            1인
                                        </span>
                                    </p>
                                </div>
                                <p class="t_arrow"><img src="/images/Shop/arrow-right.png" style="width:65%" /></p>
                            </div>
                        </div>
                        start_it++;
                    }
                </div>
            </div>
        </section>
    </div>
</div>


<style>

    .sel {
        cursor: pointer
    }

    .product-title {
        color: #ff4157;
        position: relative;
        margin: 0 0 10px 30px;
        padding: 0 0 20px;
        clear: both;
    }

        .product-title span {
            display: inline-block;
            padding-bottom: 15px;
            text-transform: uppercase;
            border-bottom: 3px solid transparent;
            color: #333;
        }

        .product-title:after {
            position: absolute;
            left: 0;
            height: 1px;
            width: 100%;
            bottom: 0;
            background: #162541;
            content: "";
        }

    .menuover {
        position: relative;
        transition: 0.2s;
        border: solid 1px #ddd;
        padding: 0;
        margin-right: 15px;
    }

        .menuover:hover {
            transform: translateY(-5px);
        }


    .t_duration {
        padding: 2% 0;
        font-size: 1.2em;
        color: #555;
        line-height: 2rem;
    }

    .t_price {
        margin: 1% 0;
        padding: 2% 0;
        font-size: 1.2em;
        font-weight: bold;
        margin-left: 10px
    }

    .t_arrow {
        position: absolute;
        bottom: 5%;
        right: -4%;
    }

    .ori {
        border: solid 0.5px #b0b0b0;
    }



    .img-responsive {
        width: 100%;
    }

    .btn-size {
        font-size: 0.75em;
        margin-bottom: 30px;
    }

    @@media (max-width:767px) {
        .product-title {
            text-align: center;
            margin: 15px 0;
        }
    }
</style>

