@model IEnumerable<supertalentoftheworld.Models.Travel_Goods>
@{
    Layout = "/Views/Shared/_Layout.cshtml";
}
@Html.Partial("/Views/Layout/Header.cshtml")
<!--Shop/Brochures-->
<div class="col-md-12 subtitle_bg" style="background-image: url('/images/Background/Brochures-back1.jpg');box-sizing: border-box; background-size: cover; background-position: center right; background-repeat: no-repeat; color: #fff; line-height:3em;padding:0;">
    <div class="col-md-4 col-md-offset-1" style="display:block;position:relative;padding:20px 0;">
        <h1 class="subtitle_res" style="font-weight:700;color:#fff;text-align:center;">Travel Deals</h1>
    </div>
</div>

<div class="col-md-12" style="clear:both;display:block;padding:30px 0;">
    <div class="text-left">
        <section class="gallery-front" style="padding:30px;">
            <div class="row" style="margin:1% 10%;">
                <h3 style="font-weight:600;">LUXURY TRAVEL WITH 360 ENTERTAINMENT</h3><br />
                <h4 style="font-weight:bold">Join the evolution</h4><br />
                <p style="font-size:1.2em">Share and making a difference #joinsupertalent #bestsupertalent #supertalentworld</p><br />
                <p style="font-size:1.2em; color:#ff4157">FEATURED EUROPE TRIPS, FOLLOW MY LUXURY EUROPE AND SHARE WITH WORLD</p>

                <div style="">
                    @{ int start_it = 1;}

                    @foreach (var item in Model.Where(a => a.Category == 0))
                    {
                        <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12 text-center sel" style="margin-top:20px;padding:0;z-index:100" onclick="location.href='/Shop/Details?id='+@item.id+''">
                            <div class="menuover">

                                <img class="img-responsive" src="@item.MainImgPath" style="width:100%;height:228px;">

                                @*<div class="text-left" style="margin-top:5px">
                        <text style="color:#333; margin-left:15px"><i style="font-size:1.0em;" class="fas fa-calendar-alt"></i> @item.days Days</text>
                        <text style="color:#333; margin-left:15px"><i style="font-size:1.0em;" class="fas fa-globe"></i> @item.Country Countries</text>
                        <text style="color:#333; margin-left:15px"><i style="font-size:1.0em;" class="fas fa-location-arrow"></i> @item.City Cities</text>
                    </div>*@
                                <div class="text-center" style="">
                                    <h4 style="margin:15px 0; word-break:keep-all;">@item.Title</h4>
                                    @*<span class="star"><img title="별점" src="/images/Shop/stars.png" /></span>*@
                                </div>
                                <div class="text-center">
                                    <span style="margin:15px; word-break:keep-all;font-size:14px;text-align:center;color:#ff4157">@item.Sdate ~  @item.Edate</span>
                                    <br />
                                </div>


                                <div class="text-center" style="margin-bottom:15px">
                                    <p>
                                        <span style="color:#666; font-weight:500;font-size:14px;text-decoration:line-through;">
                                            @{
                                                double old_price = 0;
                                                double now_price = Convert.ToDouble(item.Price_d);

                                                old_price = (now_price / 0.8);

                                            }
                                            <br />
                                            @old_price.ToString("###,###")

                                        </span><br />
                                        <span><span style="color:#ff4157;font-weight:500;font-size:16px;">20%&nbsp;&nbsp;</span>&#8361;</span> @item.Price_d <span style="font-size:1em">
                                            1person<br />
                                            @if (start_it == 1 || start_it == 2)
                                            {<br />
                                                <span style="color:red;">SOLD OUT</span>
                                            }

                                        </span>
                                    </p>
                                </div>
                            </div>
                        </div>

                        start_it++;
                    }
                </div>
            </div>
        </section>
    </div>
</div>


<style>

    .sel {
        cursor: pointer
    }


    .t_duration {
        padding: 2% 0;
        font-size: 1.2em;
        color: #555;
        line-height: 2rem;
    }


    .ori {
        border: solid 0.5px #b0b0b0;
    }

    .menuover {
        height: 396px;
    }

    .img-responsive {
        width: 100%;
    }

    .btn-size {
        font-size: 0.75em;
        margin-bottom: 30px;
    }
</style>

