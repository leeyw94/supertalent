@{
    Layout = "/Views/Shared/_Layout.cshtml";
}
@Html.Partial("/Views/Layout/Header_ko.cshtml")
<!--Apply/Application-->
<div class="" style="background-image: url(/images/Background/application_background.jpg); background-size:cover; padding:50px">

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-12 mb-5 heading-section ftco-animate">
                <h2 style="text-align:center; font-weight:bold; margin-bottom:30px;">지원 신청서 작성</h2>
                <form name="frm" action="/Apply/Application_ko" method="POST" onsubmit="return CheckForm(this)">
                    <div class="row">
                        <div class="col-md-6 form-group">
                            <label for="fistname">대회 선택<text class="required">*</text></label>
                            <select id="category" class="form-control" name="category">
                                <option value="0">대회를 선택해주세요</option>
                                <option value="1">슈퍼탤런트 코리아</option>
                                <option value="2">슈퍼레이디 코리아</option>
                            </select>
                        </div>
                        <div class="col-md-6 form-group" style="padding:0">
                            <div class="col-md-6 form-group">
                                <label for="age">나이<text class="required">*</text></label>
                                <select id="age" name="age" class="form-control">
                                    <option value="0">AGE</option>
                                    @for (var i = 18; i <= 60; i++)
                                    {
                                        <option value="@i">@i </option>
                                    }
                                </select>
                            </div>
                            <div class="col-md-6 form-group">
                                <label for="height">신장<text class="required">*</text></label>
                                <select id="height" name="height" class="form-control">
                                    <option value="0">HEIGHT</option>
                                    @for (var i = 165; i <= 189; i++)
                                    {
                                        <option value="@i">@i cm</option>
                                    }
                                </select>
                            </div>
                        </div>

                    </div>
                    <div class="row">
                        <div class="col-md-6 form-group">
                            <label for="lastname">이름(Last name)<text class="required">*</text></label>
                            <input id="ln" class="form-control" name="name" type="text" />
                        </div>
                        <div class="col-md-6 form-group">
                            <label for="fistname">성(First name)<text class="required">*</text></label>
                            <input id="fn" class="form-control" name="firstname" type="text" />
                        </div>

                    </div>

                    <div class="row">
                        <div class="col-md-6 form-group">
                            <label for="city">거주 도시</label>
                            <input class="form-control" name="city" type="text" />
                        </div>
                        <div class="col-md-6 form-group">
                            <label for="city">휴대폰<text class="required">*</text></label>
                            <input class="form-control" name="phone" type="text" />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 form-group">
                            <label for="fistname">직업</label>
                            <input class="form-control" name="job" type="text" />
                        </div>
                        <div class="col-md-6 form-group">
                            <label for="city">구사 언어</label>
                            <input class="form-control" name="language" type="text" />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 form-group">
                            <label for="fistname">희망</label>
                            <input class="form-control" name="hope" type="text" />
                        </div>
                        <div class="col-md-6 form-group">
                            <label for="city">페이스북(Optional)</label>
                            <input class="form-control" name="facebook" type="text" />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 form-group">
                            <label for="fistname">인스타그램(Optional)</label>
                            <input class="form-control" name="insta" type="text" />
                        </div>
                        <div class="col-md-6 form-group">
                            <label for="city">유튜브 채널(Optional)</label>
                            <input class="form-control" name="youtube" type="text" />
                        </div>
                    </div>

                    @*<div class="row">
                            <div class="col-md-6 form-group">
                                <label for="fistname">비밀번호</label>
                                <input class="form-control" type="text" />
                            </div>
                            <div class="col-md-6 form-group">
                                <label for="city">비밀번호 재입력</label>
                                <input class="form-control" type="text" />
                            </div>
                        </div>*@

                    

                    <input id="check0" type="checkbox" /> 본인은 이 양식에 제공된 모든 정보가 사실임을 확인합니다.<br />
                    <input id="check1" type="checkbox" /> 본인은 슈퍼탤런트가 진행하는 신규 서비스 및 특별 행사에 대한 정보를 이메일 또는 SMS로 받을 것임을 동의합니다.<br />
                    <input id="check2" type="checkbox" /> 본인은 슈퍼탤런트가 계약되어 있는 월드 파트너에게 귀하의 데이터를 제공할 권리가 있으며, 이에 동의합니다.<br />

                    <div class="text-center">
                        <button type="submit" class="submit-btn">지원하기</button>
                    </div>
                </form>




            </div>

        </div>


    </div>
</div>

