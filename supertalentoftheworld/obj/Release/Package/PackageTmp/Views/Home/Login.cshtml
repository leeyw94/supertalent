@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

@Html.Partial("/Views/Layout/Header.cshtml")

<div class="row login-row">



    <h2 style="text-align:center; ">Login</h2>
    <div class="col-md-12 login-col12">
        <div class="col-md-4"></div>
        <div class="col-md-4" margin:0 auto;">
            <form id="LoginForm" method="post" action="/Home/Login">
                @Html.TextBox("user_email", "", new { Class = "input_user", Type = "email", Placeholder = "E-mail", Data_val = "true", Data_val_required = "Please enter your email address" })
                @Html.ValidationMessage("user_email", new { Class = "text-danger" })
                @Html.TextBox("user_password", "", new { Class = "input_user", Type = "password", Placeholder = "Password", Data_val = "true", Data_val_required = "Please enter your password" })
                @Html.ValidationMessage("user_password", new { Class = "text-danger" })
                <div class="form-group mg-b-20 text-danger">@ViewBag.Error</div>
                <button type="submit" name="submit" class="input_user login-submit_user" style="color:#fff;">Log In</button>
            </form>
            <div style="margin-bottom:132px;margin-top:30px;" class="login-linkgroup text-center">
                <text style="font-size:16px;">Supertalent Of The World  <a href="/Home/SignUp" style="text-align:center;color:#ff4157;">Register</a></text>                
            </div>
        </div>

    </div>
</div>

<style>
    .input_user {
    display: block;
    width: 70%;
    margin: 2% auto;
    padding: 2%;
    color: #333;
}

</style>

