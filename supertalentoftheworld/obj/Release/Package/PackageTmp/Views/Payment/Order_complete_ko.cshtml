@model supertalentoftheworld.Models.Pay
@{
    Layout = "/Views/Shared/_Layout.cshtml";
}
@Html.Partial("/Views/Layout/Header_ko.cshtml")

<div style="background-color:#f3f3f3">
    <div class="container text-center">
        <h2 style="margin-top:100px; margin-bottom:100px">주문 정보가 입력되었습니다.</h2>

        <div class="col-md-4 col-md-offset-4" style="margin-bottom:30px; padding:20px; border-radius:10px; background-color:#ffffff">
            <p style="font-weight:bold; font-size:1.2em;">주문 정보</p><br />
            <p class="title-text">상품명 : @Model.TG_name</p><br />
            <p class="title-text">수량 : @Model.Amount 인</p><br />
            <p id="price" class="title-text">가격 : </p><br />
            <p id="total_price" class="title-text">총 금액 : </p>
        </div>

        <div class="col-md-4 col-md-offset-4" style="margin-bottom:100px; padding:20px; border-radius:10px; background-color:#ffffff">
            <p class="title-text">아래 계좌로 결제 금액을 입금해 주세요.</p><br />
            <p class="title-text" style="color:#ff4157">[농협] 301-0178-0225-91 (주)수타그룹</p>
            <p style="color:#ff4157">*주문 정보 작성시 입력했던 계좌로 입금해야 합니다.</p>
        </div>
    </div>

</div>

<style>
    .title-text {
        font-weight: bold;
        font-size: 1.0em;
    }
</style>

<script>
    var p = addComma("@Model.Price");
    var tp = addComma("@Model.Total_Price");

    $('#price').append(p + "원");
    $('#total_price').append(tp + "원");


     function addComma(num) {
        var regexp = /\B(?=(\d{3})+(?!\d))/g;
        return num.toString().replace(regexp, ',');
    }
</script>