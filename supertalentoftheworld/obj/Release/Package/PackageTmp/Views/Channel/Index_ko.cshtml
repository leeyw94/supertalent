@{
    Layout = "/Views/Shared/_Layout.cshtml";
}
@Html.Partial("/Views/Layout/Header_ko.cshtml")
<!--Channel/Index-->

<section class="image-head-wrapper" style="background-image: url('/images/Background/Channel-back.jpg'); background-size:cover">
    <div class="inner-wrapper">
        <h1 class="in-img-text">Channel</h1>
    </div>
</section>

<div style="margin-top:5%; margin-bottom:5%;">
    <section>
        <div class="row">
            <div class="col-md-1" style="float:left"></div>
            <div class="col-md-10" style="float:left; text-align:center; padding:5% 0 5% 0;">
                <div class="col-md-3"></div>
                <div class="col-md-2" style="float:left">
                    <div class="channel"><img src="~/images/sns1.png" /></div>
                    <h4 class="channel-title">Facebook</h4>
                    <p class="channel-text">슈퍼탤런트 오브 더 월드 페이스북 채널</p>
                    <a href="https://www.facebook.com/SuperTalentOfficial/" target="_blank" class="channel-more">more</a>
                </div>
                <div class="col-md-2" style="float:left">
                    <div class="channel"><img src="~/images/sns2.png" /></div>
                    <h4 class="channel-title">Instagram</h4>
                    <p class="channel-text">슈퍼탤런트 오브 더 월드 인스타그램 채널</p>
                    <a href="https://www.instagram.com/misssupertalent/" target="_blank" class="channel-more">more</a>
                </div>
                <div class="col-md-2" style="float:left">
                    <div class="channel"><img src="~/images/sns3.png" /></div>
                    <h4 class="channel-title">Youtube</h4>
                    <p class="channel-text">슈퍼탤런트 오브 더 월드 유튜브 채널</p>
                    <a href="https://www.youtube.com/channel/UCbe6_o-ULwZ_tznU0ot3X7Q" target="_blank" class="channel-more">more</a>
                </div>
                <div class="col-md-3"></div>
            </div>
            <div class="col-md-1" style="float:left"></div>
        </div>
    </section>
</div>

<style>

    .channel-title {
        margin-top: 10%;
        margin-bottom: 10%;
        font-size: 2.6rem;
        font-weight: bold;
        color: #162541;
    }

    .channel-text {
        width: 80%;
        word-break: keep-all;
        line-height: 2rem;
        text-align: center;
        display: inline-block;
    }

    .channel-more {
        margin-top: 10%;
        display: inline-block;
        padding: 5% 15% 5% 15%;
        border: 1px solid #162541;
        border-radius: 2rem;
        transition: 0.5s;
    }

        .channel-more:hover {
            background: white;
            font-weight: bold;
        }
</style>