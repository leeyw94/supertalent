<style>

    .sel {
        cursor: pointer
    }

    .product-title {
        color: #ff4157;
        position: relative;
        margin: 0 0 10px 30px;
        padding: 0 0 20px;
        clear: both;
    }

        .product-title span {
            display: inline-block;
            padding-bottom: 15px;
            text-transform: uppercase;
            border-bottom: 3px solid transparent;
            color: #333;
        }

        .product-title:after {
            position: absolute;
            left: 0;
            height: 1px;
            width: 100%;
            bottom: 0;
            background: #162541;
            content: "";
        }

    .menuover {
        position: relative;
        transition: 0.2s;
        border: solid 1px #ddd;
        padding: 0;
        margin-right: 15px;
    }

        .menuover:hover {
            transform: translateY(-5px);
        }


    .t_duration {
        padding: 2% 0;
        font-size: 1.2em;
        color: #555;
        line-height: 2rem;
    }

    .t_price {
        margin: 1% 0;
        padding: 2% 0;
        font-size: 1.2em;
        font-weight: bold;
        margin-left: 10px
    }

    .t_arrow {
        position: absolute;
        bottom: 5%;
        right: -4%;
    }

    .ori {
        border: solid 0.5px #b0b0b0;
    }



    .img-responsive {
        width: 100%;
    }

    .btn-size {
        font-size: 0.75em;
        margin-bottom: 30px;
    }

    @@media (max-width:767px) {
        .product-title {
            text-align: center;
            margin: 15px 0;
        }
    }
</style>

