@model supertalentoftheworld.Models.Model_Data
@using supertalentoftheworld.Models

@Html.Partial("/Views/Layout/Header_ko.cshtml")

<div>
    @*<div>
        <section class="image-head-wrapper" style="background-image: url('/images/Background/Finalist-back.jpg'); background-size:cover">
            <div class="inner-wrapper">
                <h1 class="in-img-text">Finalists</h1>
            </div>
        </section>
    </div>*@

    <div class="row box" style="margin-top:50px;">

        <div class="col-md-12">
            <div class="container">
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12  col-md-offset-1">
                    <div id="myCarousel1" class="carousel slide" data-ride="carousel">


                        <ol class="carousel-indicators">
                            <li data-target="#myCarousel1" data-slide-to="0" class="active"></li>


                            @foreach (var item in ViewBag.images)
                            {
                                var i = 1;
                                <li data-target="#myCarousel+@i" data-slide-to=@i></li>
                                i++;
                            }

                        </ol>

                        <div class="carousel-inner">
                            <div class="item active">
                                <img src=@Model.MainImgPath style="width:100%; height:440px" alt="First slide">
                                <div class="carousel-caption">
                                </div>
                            </div>

                            @foreach (var item in ViewBag.images)
                            {
                                <div class="item">
                                    <img src="@item.ImagePath" style="width:100%; height: 440px" onerror="this.src='http://supertalent.theblueeye.com/upload2/error.png'">
                                    <div class="carousel-caption">
                                    </div>
                                </div>
                            }

                        </div>
                        <a class="left carousel-control" href="#myCarousel1" data-slide="prev"> <img src="/images/icons/left-arrow.png" onmouseover="this.src = '/images/icons/left-arrow-hover.png'" onmouseout="this.src = '/images/icons/left-arrow.png'" alt="left"></a>
                        <a class="right carousel-control" href="#myCarousel1" data-slide="next"><img src="/images/icons/right-arrow.png" onmouseover="this.src = '/images/icons/right-arrow-hover.png'" onmouseout="this.src = '/images/icons/right-arrow.png'" alt="left"></a>

                    </div>
                </div>

                <div class="row col-lg-6 col-md-6 col-sm-6 col-md-offset-1" style=" padding-bottom:0px;display:table">
                    <div class="col-lg-12">
                        <h3 class="title-bio">NAME</h3>
                        <p class="text-bio">@Model.M_name</p>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-4">
                        <h4 class="title-bio">FROM</h4>
                        <p class="text-bio" style="float:left;padding-right:14px;">@Model.M_country</p>


                        <img style="max-width:40px; min-width:50px" src="@Model.M_country_img" onerror="this.src='http://supertalent.theblueeye.com/upload2/error.png'">
                    </div>
                    <div class="col-lg-8 col-md-8 col-sm-8">
                        <h4 class="title-bio">Country of residence</h4>
                        <p class="text-bio" style="float:left;padding-right:14px;"></p>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-4" style="clear:both">
                        <h4 class="title-bio">BORN IN</h4>
                        <p class="text-bio">@Model.M_city</p>
                    </div>
                    <div class="col-lg-8 col-md-8 col-sm-8">
                        <h4 class="title-bio">LANGUAGE</h4>
                        <p class="text-bio">@Model.M_language</p>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-4" style="clear:both">
                        <h4 class="title-bio">AGE</h4>
                        <p class="text-bio">@Model.M_age</p>
                    </div>
                    <div class="col-lg-8 col-md-8 col-sm-8">
                        <h4 class="title-bio">HEIGHT</h4>
                        <p class="text-bio">@Model.M_height</p>
                    </div>
                    @if (Model.M_facebook != null)
                    {
                        <div class="col-lg-4 col-md-4 col-sm-4" style="clear:both">
                            <h4 class="title-bio">FACEBOOK</h4>
                            <a class="text-bio" href="@Model.M_facebook">
                                <img src="~/images/sns1.png" width="35" style="margin-top:10px;" />
                            </a>
                        </div>
                    }
                    @if (Model.M_insta != null)
                    {
                        <div class="col-lg-4 col-md-4 col-sm-4">
                            <h4 class="title-bio">INSTAGRAM</h4>
                            <a class="text-bio" href="@Model.M_insta">
                                <img src="~/images/sns2.png" width="35" style="margin-top:10px;" />
                            </a>
                        </div>
                    }
                    @if (Model.M_youtube != null)
                    {

                        <div class="col-lg-4 col-md-4 col-sm-4 youtubeicon">
                            <h4 class="title-bio">YOUTUBE</h4>
                            <a class="text-bio" href="@Model.M_youtube">
                                <img src="~/images/sns3.png" width="35" style="margin-top:10px;" />
                            </a>
                        </div>
                    }
                </div>
                                      
                <div class="col-lg-10 col-md-10 col-sm-10 col-md-offset-1" style="clear:both; margin-top:20px;">
                    <h3 class="title-bio">B I O G R A P H Y</h3>
                    <p class="text-bio" style="line-height:2em;font-size:15px;">
                        @Model.M_content
                    </p>
                </div>
            </div>


        </div>
    </div>

    <hr style="margin:50px;" />
    <div class="text-center" style="margin-bottom:50px;">
        <button type="button" class="book-now-btn" onclick="goBack();" style="transition:0.6s;">BACK</button>
    </div>
</div>
<style>

    .title-bio {
        font-weight: bold;
        color: #b3b3b3;
        margin-top: 40px;
    }

    .text-bio {
        font-size: 1.0em;
        color: #000;
        margin-top:7px;
    }

    .title-text {
        font-size: 1.2em;
        font-weight: bold;
    }

    .note {
        margin-bottom: 30px;
    }

    * {
        box-sizing: border-box;
    }

    .slider {
        width: 80%;
        margin: 100px auto;
    }

    .slick-slide {
        margin: 0px 10px;
    }

        .slick-slide img {
            width: 100%;
        }

    .slick-prev:before,
    .slick-next:before {
        color: black;
    }


    .slick-slide {
        transition: all ease-in-out .3s;
        opacity: .2;
    }

    .slick-active {
        opacity: .5;
    }

    .slick-current {
        opacity: 1;
    }

    .photo_mini div img {
        width: 100%;
        max-width: 240px;
        max-height: 160px;
    }
</style>
<script type="text/javascript">

    function goBack() {
        window.history.back();
    }


</script>

