                    }
                    @if (Model.M_insta != null)
                    {
                        <div class="col-lg-1">
                            <a class="text-bio" href="@Model.M_insta">
                                <img src="~/images/sns2.png" width="25" style="margin-top:10px;" />
                            </a>
                        </div>
                    }
                    @if (Model.M_youtube != null)
                    {
                        <div class="col-lg-1 youtubeicon">
                            <a class="text-bio" href="@Model.M_youtube">
